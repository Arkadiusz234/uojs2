:local {

    .devtools-cursore {
        display: block;
        width: 300px;
        height: 300px;
        border: solid 1px #d1d9db;
        background-color: #fff;
        position: relative;
        overflow: hidden;

        &__cross {
            position: absolute;
            top: 50%;
            left: 50%;
            width: 1px;
            height: 1px;
            background-color: #ff0000;

            &::before {
                content: '';
                position: absolute;
                width: 20px;
                height: 20px;
                border: solid 1px #000;
                border-radius: 50%;
                top: -11px;
                left: -11px;
            }

            &::after {
                content: '';
                position: absolute;
                width: 10px;
                height: 10px;
                border: solid 1px #000;
                border-radius: 50%;
                top: -6px;
                left: -6px;
            }

        }

    }

}
