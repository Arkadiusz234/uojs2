:local {

    .devtools-map {
        display: flex;
        width: calc(32px * 8);
        height: calc(32px * 8);
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        font-size: 20px;
        font-family: monospace;

        &__tile {
            display: block;
            width: 32px;
            height: 32px;
            overflow: hidden;
            position: relative;
        }

        &__img {
            display: block;
            position: absolute;
            top: -6px;
            left: -6px;
            transform: rotate(-45deg);
        }

    }

}
