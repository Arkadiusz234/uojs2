{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
          "jsx": true
        }
    },
    "rules": {
        "arrow-parens" : ["warn", "always"],
        "arrow-spacing": ["warn", {
            "before": true,
            "after": true
        }],
        "strict": 1,
        "no-unused-vars": 1,
        "curly": 1,
        "key-spacing": ["warn", {
            "multiLine": {
                "beforeColon"   : true,
                "afterColon"    : true
            },
            "singleLine": {
                "beforeColon"   : true,
                "afterColon"    : true
            },
            "align": {
                "beforeColon"   : true,
                "afterColon"    : true,
                "on"            : "colon",
                "mode"          : "minimum"
            }
        }],
        "no-multi-spaces": ["off", {
            "exceptions": {
                "Property": true
            }
        }],
        "no-return-assign": 1,
        "no-use-before-define": 1,
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1
    },
    "env": {
        "browser": true,
        "node": true
    },
    "plugins": [
        "react"
    ]
}
